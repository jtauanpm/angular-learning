{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "types": [
            "@playwright/test"
        ],
        "outDir": "dist-e2e"
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}